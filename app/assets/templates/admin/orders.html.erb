<div class="container">

    <h2>Previous orders </h2><br>
    Sort by:
    <select ng-model="orderProp">
        <option value="updated_at">Date</option>
        <option value="total">Total</option>
        <option value="status">Status</option>
    </select><br><br>

    <!--%= will_paginate @orders %>-->
    <ul ng-repeat="page in pages" class="pages">
      <li><a href="/admin/orders/{{page}}">{{page}}</a></li>
    </ul>

    <table class="orders-list">
        <tr ng-repeat="order in orders | orderBy:orderProp">
            <td>{{ order.updated_at | date:"dd/MM/yyyy @ h:mma" }}</td>
            <td>{{ order.total | currency }}</td>
            <td>{{ order.status }}</td>
        </tr>
    </table>


</div>


